{% extends 'base.html.twig' %}

{% block title %}Hello FicheFraisController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Hello {{ user.prenom }}!</h1>

    Voici ta liste de FicheFrais :
    <ul>
        {% for fichefrais in fichesfrais %}
            <li>{{ fichefrais.id }} - {{ fichefrais.mois }} - {{ fichefrais.etat.libelle }} - Justificatifs : {{ fichefrais.nbrJustificatif }}</li>
        {% endfor %}
    </ul>
</div>
{% endblock %}
